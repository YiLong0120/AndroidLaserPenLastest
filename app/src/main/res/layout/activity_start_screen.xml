<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支援雷射筆遠程操控手機"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/cameraPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="授予相机权限"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/overlayPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="授予显示在其他应用上层权限"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cameraPermissionButton"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/accessibilityPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="授予无障碍服务权限"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/overlayPermissionButton"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/accessibilityPermissionButton"
        android:layout_marginTop="20dp" />

</RelativeLayout>
